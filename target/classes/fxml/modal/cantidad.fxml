<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.salespointfxsales.www.controller.modal.CantidadController">
    <TextField fx:id="txtCantidad" alignment="CENTER_RIGHT" editable="false" maxWidth="200" style="-fx-font-size: 24px;" text="1" />

    <GridPane alignment="CENTER" hgap="5" vgap="5">
        <columnConstraints>
            <ColumnConstraints percentWidth="33" />
            <ColumnConstraints percentWidth="33" />
            <ColumnConstraints percentWidth="33" />
        </columnConstraints>

        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onNumberClick" text="1" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onNumberClick" text="2" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onNumberClick" text="3" GridPane.columnIndex="2" GridPane.rowIndex="0" />

        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onNumberClick" text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onNumberClick" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onNumberClick" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />

        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onNumberClick" text="7" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onNumberClick" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onNumberClick" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" />

        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onClear" text="C" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onNumberClick" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onBackspace" text="←" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onCancel" text="Cancelar" />
        <Button onAction="#onAceptar" text="Aceptar" />
    </HBox>
</VBox>
